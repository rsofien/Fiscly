{
  "kind": "collectionType",
  "collectionName": "invoices",
  "info": {
    "singularName": "invoice",
    "pluralName": "invoices",
    "displayName": "Invoice",
    "description": "Customer invoices"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "invoiceNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "invoices"
    },
    "workspace": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::workspace.workspace",
      "inversedBy": "invoices"
    },
    "issueDate": {
      "type": "date",
      "required": true
    },
    "dueDate": {
      "type": "date",
      "required": true
    },
    "amount": {
      "type": "float",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "sent", "paid", "overdue", "cancelled"],
      "default": "draft"
    },
    "description": {
      "type": "text"
    },
    "notes": {
      "type": "text"
    },
    "items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::invoice-item.invoice-item",
      "mappedBy": "invoice"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["bank_transfer", "card", "crypto", "cash"],
      "default": "bank_transfer"
    },
    "paidDate": {
      "type": "date"
    }
  }
}
